<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComicChecklist.Presentation.UI.MainPage">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" MinimumWidthRequest="300">
        <Label Text="Iniciar Sesión" HorizontalOptions="CenterAndExpand" FontSize="Title" Margin="0,20,0,20" />
        <Entry Placeholder="Nombre de Usuario" x:Name="UsernameEntry" Margin="10" />
        <Entry Placeholder="Contraseña" x:Name="PasswordEntry" IsPassword="True" Margin="10" />
        <Button Text="Login" Clicked="Button_Clicked" HorizontalOptions="CenterAndExpand" Margin="10"></Button>
    </StackLayout>
</ContentPage>
