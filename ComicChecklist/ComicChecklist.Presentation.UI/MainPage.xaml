<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComicChecklist.Presentation.UI.MainPage">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" MinimumWidthRequest="300">
        <Label Text="This is a fake login, for testing purposes there is an access token hardcoded in the app." HorizontalOptions="CenterAndExpand" FontSize="Title" Margin="0,20,0,20" />
        <Label Text="Just press the login button to access the app." HorizontalOptions="CenterAndExpand" FontSize="Title" Margin="0,20,0,20" />
        <StackLayout HorizontalOptions="CenterAndExpand">
            <Entry Placeholder="User1" x:Name="UsernameEntry" Margin="10" IsReadOnly="True"  />
            <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" Margin="10" IsReadOnly="True" />
            <Button Text="Login" Clicked="Button_Clicked" HorizontalOptions="CenterAndExpand" Margin="10"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>
