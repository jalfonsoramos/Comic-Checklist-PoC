<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComicChecklist.Presentation.UI.Views.ChecklistsPage"
             Title="Available Checklists">
    <StackLayout Padding="5" Margin="5">
        <!--<Label Text="Available Checklists" FontSize="Title" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10" />-->

        <CollectionView ItemsSource="{Binding AvailableChecklists}" HorizontalOptions="CenterAndExpand" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="5" Spacing="10" Orientation="Vertical" >
                        <Label Text="{Binding Name}" FontSize="Body" HorizontalOptions="Center" />
                        <Button Text="View"></Button>
                        <Button Text="Subscribe"></Button>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>